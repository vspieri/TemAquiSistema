@model Tem_Aqui.Models.Login

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginNome" class="control-label"></label>
                <input asp-for="LoginNome" class="form-control" />
                <span asp-validation-for="LoginNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginSenha" class="control-label"></label>
                <input asp-for="LoginSenha" class="form-control" />
                <span asp-validation-for="LoginSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volte para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
